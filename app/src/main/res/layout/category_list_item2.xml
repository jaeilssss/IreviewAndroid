<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="170dp"
    android:layout_height="270dp">

    <LinearLayout
        android:paddingTop="15dp"
        android:paddingLeft="8dp"
        android:layout_width="170dp"
        android:layout_height="270dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/review_list2_image1"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/profile_human" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="25dp"
    android:orientation="horizontal">
        <TextView
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:paddingTop="5dp"
            android:text="제품명: "
            android:textSize="12sp"
            android:textColor="#24a6e7"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:text="ddd"
        android:id="@+id/review_list2_name"
        />

</LinearLayout>
        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:id="@+id/review_list2_title1"
            android:text="글 제목"
            android:textSize="14sp"
            android:textColor="#262626"/>

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="25dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="26dp"
                android:layout_height="25dp"
                android:paddingTop="5dp"
                android:text="추천"
                android:textSize="12sp"
                android:textColor="#a5a5a5"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:paddingTop="5dp"
            android:paddingRight="12dp"
            android:id="@+id/review_list2_recommend"
            android:text="324"
            android:textSize="12sp"
            android:textColor="#a5a5a5"/>

            <TextView
                android:layout_width="26dp"
                android:layout_height="25dp"
                android:paddingTop="5dp"
                android:text="댓글"
                android:textSize="12sp"
                android:textColor="#a5a5a5"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:paddingTop="5dp"
                android:id="@+id/review_list2_comment"
                android:text="324"
                android:textSize="12sp"
                android:textColor="#a5a5a5"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>